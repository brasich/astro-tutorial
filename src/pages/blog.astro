---
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPostListItem from '../components/BlogPostListItem.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<BaseLayout>
    <p>This is where I'll post about my astro learning experience</p>
    <ul>
        {allPosts.map((post) => <BlogPostListItem postUrl={post.url} postTitle={post.frontmatter.title} postDescription={post.frontmatter.description} />)}
    </ul>
</BaseLayout>
